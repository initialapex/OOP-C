/* tasks.json */
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_encapulation",
            "command": "gcc",
            "args": [
                "-o",
                "encap",
                "Encapsulation/Main.c",
                "Encapsulation/Rectangle.c",
                "-g",
                "-v",
                "-fms-extensions"
            ],
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
